<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@color/white"
        tools:context=".SelectCompletedCourses"
>

    <TextView android:layout_width="fill_parent"
              android:layout_height="25dp"
              android:text="Select your completed courses:"
              android:textSize="16sp"
              android:textColor="@color/grey_light_custom"
              android:id="@+id/choose_completed_title"
    />

    <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/choose_completed_title"
            android:background="@color/grey_line_divider"
    />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/checklist_layout"
                  android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:layout_marginTop="10dp"
                  android:layout_below="@+id/choose_completed_title"
    >

        <ListView android:id="@+id/prerequisite_list"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1">
        </ListView>

        <RelativeLayout android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="0"
                        android:layout_marginTop="5dp"
        >

            <Button android:id="@+id/clear_prerequisites"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginBottom="0dp"
                    android:text="CLEAR"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:background="@color/red_custom"
            />

            <Button android:id="@+id/submit_prerequisites"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="SUBMIT"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/green_custom"
                    android:background="@color/blue_custom"
                    android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
            />

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>